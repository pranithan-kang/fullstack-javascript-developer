  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via yarn - remote DB",
      "request": "launch",
      "runtimeArgs": ["dev"],
      "env": {
        "PORT": "4000",
        "NODE_ENV": "development-remote-db"
      },
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "Launch via yarn - local DB",
      "request": "launch",
      "runtimeArgs": ["dev"],
      "env": {
        "PORT": "4000",
        "NODE_ENV": "development"
      },
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "Launch via npm",
      "request": "launch",
      "runtimeArgs": ["run", "dev"],
      "env": {
        "PORT": "4000",
        "NODE_ENV": "development"
      },
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    }
  ]
}
